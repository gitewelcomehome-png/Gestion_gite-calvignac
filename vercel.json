{
  "version": 2,
  "name": "gestion-gite-calvignac",
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "index.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/openai",
      "dest": "/api/openai.js"
    },
    {
      "src": "/api/webhooks/abritel",
      "dest": "/api/webhooks/abritel.js"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "SUPABASE_URL": "@supabase-url",
    "SUPABASE_KEY": "@supabase-key",
    "OPENAI_API_KEY": "@openai-api-key",
    "TIMEZONE": "@timezone",
    "ABRITEL_WEBHOOK_SECRET": "@abritel-webhook-secret"
  }
}
