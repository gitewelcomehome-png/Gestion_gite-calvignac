/* ===================================
   üé® CLASSES UTILITAIRES
   =================================== */

/* Conteneur principal centr√© (max-width: 1200px) */
.container-main {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 20px;
}

/* Classes de couleurs */
.btn-success {
    background-color: var(--color-success);
    color: white;
}

.btn-danger {
    background-color: var(--color-danger);
    color: white;
}

.btn-primary {
    background-color: var(--color-primary);
    color: white;
}

.btn-special {
    background-color: var(--color-special);
    color: white;
}

.btn-neutral {
    background-color: var(--color-neutral);
    color: white;
}

/* Ic√¥nes Font Awesome - tailles */
.icon-sm {
    font-size: 1rem;
}

.icon-md {
    font-size: 1.25rem;
}

.icon-lg {
    font-size: 1.5rem;
}

.icon-xl {
    font-size: 2rem;
}

/* ===================================
   üé® THEME SWITCHER UI
   =================================== */
#theme-switcher {
    position: fixed;
    bottom: 25px;
    right: 25px;
    background: var(--bg-primary);
    border: 1px solid var(--border);
    border-radius: 16px;
    padding: 15px;
    box-shadow: var(--shadow-md);
    display: flex;
    flex-direction: column;
    gap: 10px;
    z-index: 9999;
    transition: var(--transition);
}

#theme-switcher button {
    padding: 8px 16px;
    border: 1px solid var(--border);
    border-radius: 8px;
    background: var(--bg-secondary);
    color: var(--text-primary);
    cursor: pointer;
    font-weight: 600;
    font-size: 0.875rem;
    transition: var(--transition-fast);
}

#theme-switcher button:hover {
    background: var(--color-primary);
    color: white;
    transform: translateY(-1px);
}

#theme-switcher button.active {
    background: var(--color-special);
    color: white;
    border-color: var(--color-special);
}

/* ===================================
   üé® TRANSITIONS GLOBALES
   Application de 0.3s ease sur changements de th√®me
   =================================== */
* {
    transition: background-color 0.3s ease, 
                color 0.3s ease, 
                border-color 0.3s ease,
                box-shadow 0.3s ease;
}

/* Exceptions pour animations rapides */
button, .btn, input, select, textarea {
    transition: all 0.3s ease;
}

button:hover, .btn:hover {
    transition: all 0.15s ease;  /* Hover plus rapide */
}
